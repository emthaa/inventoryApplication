<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" type="text/css" href="style.css" />

    <title>Developers</title>
  </head>
  <body>
    <header>
      <a class="headerLinks" href="/">Home</a>
      <a class="headerLinks" href="/games">Games</a>
      <a class="headerLinks" href="/genres">Genres</a>
      <a class="headerLinks" href="/developers">Developers</a>
    </header>
    <main>
      <h1>All Developers</h1>
      <a class="add-item-button" href="/developers/add">Add Developer</a>
      <div class="item-list">
      <% developers.forEach(developer => { %>
      <a class="cardButton" href="/developers/<%=developer.id%>"><%= developer.name %></a>
      <% }); %>
    </div>
    </main>
  </body>
</html>
